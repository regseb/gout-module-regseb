{
    "patterns": [
        "!/.git/", "!/node_modules/", "**"
    ],
    "checkers": [
        {
            "patterns": "*.js",
            "linters": "eslint"
        }, {
            "patterns": "*.html",
            "linters": "htmlhint"
        }, {
            "patterns": "*.css",
            "linters": "stylelint"
        }, {
            "patterns": "*.md",
            "linters": "markdownlint"
        }, {
            "patterns": "*.json",
            "linters": { "jsonlint": null }
        }, {
            "patterns": "/package.json",
            "linters": "david"
        }
    ]
}
